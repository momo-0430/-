      position: relative;
      overflow: hidden;
    }
    .mole {
      width: 80px;
      height: 80px;
      background-color: #666;
      border-radius: 50%;
      position: absolute;
      bottom: -80px;
      left: 50%;
      transform: translateX(-50%);
      display: none;
    }
    .score {
      font-size: 24px;
      margin-top: 20px;
    }
