<body>

  <h1>打地鼠游戏</h1>
  <div class="score">
    分数: <span id="score">0</span>
  </div>
  
  <div class="game-container" id="game-container">
    <!-- 9个洞口，每个洞口里可能会弹出地鼠 -->
    <div class="hole" onclick="hitMole(0)">
      <div class="mole" id="mole-0"></div>
    </div>
    <div class="hole" onclick="hitMole(1)">
      <div class="mole" id="mole-1"></div>
    </div>
    <div class="hole" onclick="hitMole(2)">
      <div class="mole" id="mole-2"></div>
    </div>
    <div class="hole" onclick="hitMole(3)">
      <div class="mole" id="mole-3"></div>
    </div>
    <div class="hole" onclick="hitMole(4)">
      <div class="mole" id="mole-4"></div>
    </div>
    <div class="hole" onclick="hitMole(5)">
      <div class="mole" id="mole-5"></div>
    </div>
    <div class="hole" onclick="hitMole(6)">
      <div class="mole" id="mole-6"></div>
    </div>
    <div class="hole" onclick="hitMole(7)">
      <div class="mole" id="mole-7"></div>
    </div>
    <div class="hole" onclick="hitMole(8)">
      <div class="mole" id="mole-8"></div>
    </div>
  </div>

  <button class="start-button" onclick="startGame()">开始游戏</button>

  <script>
    let score = 0;
    let gameInterval;
    let moleInterval;
    let activeMoles = [];

    // 显示随机地鼠
    function showRandomMole() {
      const moleIndex = Math.floor(Math.random() * 9);
      const mole = document.getElementById(`mole-${moleIndex}`);
      if (!activeMoles.includes(moleIndex)) {
        mole.style.display = 'block';
        activeMoles.push(moleIndex);
        setTimeout(() => {
          mole.style.display = 'none';
          activeMoles = activeMoles.filter(index => index !== moleIndex);
        }, 1000); // 地鼠出现1秒钟
      }
    }

    // 处理点击地鼠
    function hitMole(index) {
      if (activeMoles.includes(index)) {
        score++;
        document.getElementById("score").textContent = score;
        const mole = document.getElementById(`mole-${index}`);
        mole.style.display = 'none';
        activeMoles = activeMoles.filter(i => i !== index);
      }
    }

    // 启动游戏
    function startGame() {
      score = 0;
      document.getElementById("score").textContent = score;
      activeMoles = [];
      gameInterval = setInterval(showRandomMole, 1500); // 每1.5秒显示一个地鼠
      moleInterval = setTimeout(() => {
        clearInterval(gameInterval);
        alert('游戏结束！');
      }, 30000); // 30秒后结束游戏
    }
  </script>

</body>
